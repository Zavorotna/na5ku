mixin cards(card)
    figure.card 
        figcaption
            picture 
                img(src=card.img, alt=card.alt)
            .card_content 
                h3= card.title
                p.time 
                    b Термін виконання:  
                    | #{card.time}
                p.expert 
                    b Експерт: 
                    | #{card.expert}
                p.fix 
                    b Безкоштовні правки: 
                    | #{card.fix}
                p.material 
                    b Безкоштовні матеріали: 
                    | #{card.material}
                .price_container 
                    span.price від
                        b #{card.price}
                        | грн
                a(href=card.href, class="button green_btn")= card.cta

